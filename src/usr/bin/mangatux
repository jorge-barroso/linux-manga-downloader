#!/bin/bash
#

[ ! -d ~/.Mangatux ] && mangatux-fu -reconf
#[ $? -ne 0 ] exit 1

source ~/.mangatux/options;
source /usr/share/mangatux/langs/$LMLANG;

export SUBMANGA_HELP_DIALOG="
