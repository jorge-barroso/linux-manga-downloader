if [ $USER == "root" ];
then
	echo "$ROOTERR"
else

if [ -z $1 ];
then
	gtkdialog --program=MAIN_DIALOG
fi
echo $1

case $1 in
	-gui)
		gtkdialog --program=MAIN_DIALOG
		;;
	-reconf)
		mangatux-fu -reconf
		;;
	-config)
		gtkdialog --program=CONFIG_DIALOG > /tmp/configtmp
		mangatux-fu -saveconfig
		;;
	*)
		;;
esac
fi
