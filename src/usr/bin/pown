#!/bin/bash
#pown.it

# /* Import options *\ #

source ~/.mangatux/options
source /usr/share/mangatux/langs/$LMLANG;

NUMBER=`echo $1 | tr -d [A-Z][a-z][:/.]`
if [ $NUMBER == 0 ];
then
	echo "$PNI1"
else
	if [ -e $HOME/pown ];
	then
		cd $HOME/pown
		wget http://www.pown.it/flash/$NUMBER.swf -o /tmp/logsesion
	else
		mkdir $HOME/pown
		cd $HOME/pown
		wget http://www.pown.it/flash/$NUMBER.swf -o /tmp/logsesion
	fi
	notify-send --icon="pen" -u normal "$1" "Descarga Completa"
fi